resource "whisparr_download_client_qbittorrent" "qb" {
  name     = "qbittorrent"
  enable   = true
  host     = var.qb_host
  port     = var.qb_port
  username = var.qb_username
  password = var.qb_password
  category = var.cat_xxx
  use_ssl  = false
}

resource "whisparr_remote_path_mapping" "qb_xxx" {
  host        = var.qb_host
  remote_path = var.remote_xxx
  local_path  = var.local_xxx
}
